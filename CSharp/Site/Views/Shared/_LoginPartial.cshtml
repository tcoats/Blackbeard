<ul class="nav pull-right">
    @if (Request.IsAuthenticated)
    {
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <img src=" @((User.Identity as SocialPirates.Blackbeard.Site.Security.OpenIdIdentity).GravatarUrl)?s=20" />
                @( (User.Identity as SocialPirates.Blackbeard.Site.Security.OpenIdIdentity).OpenIdUser.Nickname)
                <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Sign out", "LogOff", "Account")</li>
            </ul>
        </li>
    }
    else
    {
        <li>@Html.ActionLink("Sign in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    }
</ul>
