<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Blackbeard - @ViewBag.Title </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Content/style")
    @Styles.Render("~/Content/sliders")

    @*<meta name="viewport" content="width=device-width" />*@
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="#">Blackbeard <small>social piracy&hellip;</small></a>
                <ul class="nav">
                    <li class="divider-vertical"></li>
                    <li>@Html.ActionLink("My Projects","MyProjects","Project",new{ userId = 1 },new{})</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @RenderSection("masthead",false)
    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/coffeescript")
    @Scripts.Render("~/bundles/underscore")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/backbone")
    @Scripts.Render("~/bundles/knockback")
    @Scripts.Render("~/bundles/gridster")
    @Scripts.Render("~/bundles/dragdealer")
    @Scripts.Render("~/bundles/pminject")
    @RenderSection("scripts", required: false)
</body>
</html>
